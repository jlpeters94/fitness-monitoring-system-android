<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_starting_strength"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.hehe.trumpcard.PPL2">

    <TextView
        android:text="AESTHETIC PPL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="24sp" />

    <TextView
        android:text="Push/Pull/Legs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_alignParentStart="true"
        android:id="@+id/textView24"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:text="Day 1: Push Day\n Bench 3 x 5\n OHP 3 x 10 Dumbbell Bench 3 x 10\n Cable Crossover 3 x 15\n Side Raises 3 x 15\n Tricep Exercise 3 x 15\n\n  Day 2: Pull Day\n Dumbbell Row 3 x 10\n Cable Row 3 x 10\n Lat Pulldown 3 x 10\n Face Pulls 3 x 15\n Bent-over Side Raises 3 x 15\n Bicep Exercise 3 x 15\n\n  Day 3: Legs Day\n Squat: 3 x 5\n Deadlift: 1 x 5\n Lunges: 3 x 15\n Leg Press: 3 x 15\n Abs: 3 x 15\n\nDo this program 2x a week!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView24"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView25"
        android:textColor="@android:color/white"
        android:layout_above="@+id/button27"
        android:textSize="15sp" />

    <Button
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button26"
        android:background="@android:color/white"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold" />

    <Button
        android:layout_width="330sp"
        android:layout_height="50sp"
        android:id="@+id/button27"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:layout_alignParentStart="true"
        android:text="UNLOCK NEXT TRAINING PROGRAM!\n(need at least 23 BMI)"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false" />
</RelativeLayout>
