<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_instruct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.hehe.trumpcard.Instruct">

    <TextView
        android:text="INSTRUCTIONS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold" />

    <Button
        android:text="BACK"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:id="@+id/button4"
        android:background="@android:color/white"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="START"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:id="@+id/button5"
        android:background="@android:color/white"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Tap the button Take A Photo then for best results, stand 2 to 3 meters away from the camera then capture the image. The application will then detect your weight and height and then calculate your BMI.\n\nHave fun!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:lineSpacingExtra="8sp"
        android:textAlignment="textStart"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />
</RelativeLayout>
