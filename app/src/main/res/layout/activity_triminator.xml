<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_starting_strength"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.hehe.trumpcard.Triminator">

    <TextView
        android:text="Triminator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="24sp" />

    <TextView
        android:text="Simple and Easy Weight Loss Plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_alignParentStart="true"
        android:id="@+id/textView24"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:text="Day 1:\n Breakfast: Oatmeal with fresh/frozen fruit, tea/coffee\n Lunch: 2 Cups Mixed Greens w/ 1 cup of other veggies, chopped, dressed with vinegar\nDinner: Salad\n  Day 2:\n Breakfast: Egg white omelette stuffed w/ 1 cup assorted grilled vegetables, tea/hot cocoa\n Lunch: Turkey Sandwich\n Dinner: 1 or more cups Steamed Fresh Vegetables\n  Day 3:\n Breakfast: Hot Whole-Grain Cereal with Blueberries, Tea/Coffee\n Lunch: Vegetarian Chili, 1 Ear of Corn\n Dinner: Spinach Salad\nDay 4:\n Breakfast: 1 cup fresh fruit, 1 cup yogurt, 1/2 whole-grain bagel, Tea/Coffee\n Lunch: Tuna Sandwich/Carrot and Pineapple Salad\n Dinner: Salad with Honey Mustard Dressing\n  Day 5:\n Breakfast: Oatmeal, Tea/Coffee\n Lunch: Tomato Crean Soup\n Dinner: Soba Noodles with Spicy Cucumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView24"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView25"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:text="UNLOCK NEXT DIET PLAN!\n(need at least 24 BMI)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/button30"
        android:background="@android:color/white"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false" />

    <Button
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button47"
        android:backgroundTint="@android:color/white"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />
</RelativeLayout>
